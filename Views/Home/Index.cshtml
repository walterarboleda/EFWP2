@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-4">
    <h1 class="mb-4">Panel de administración</h1>

    <div class="row gx-3 gy-3">
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Gestionar Pedidos</h5>
                    <p class="card-text">Operaciones disponibles: listar, crear, editar y eliminar pedidos.</p>

                    <div class="mt-auto">
                        <a asp-controller="Orders" asp-action="Index" class="btn btn-primary me-2">Listar Pedidos</a>
                        <a asp-controller="Orders" asp-action="Create" class="btn btn-outline-primary me-2">Crear Pedido</a>
                        <a asp-controller="Orders" asp-action="Index" class="btn btn-secondary">Editar / Eliminar</a>
                        <small class="d-block text-muted mt-2">Para editar o eliminar seleccione un pedido desde la vista de listado.</small>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Gestionar Productos</h5>
                    <p class="card-text">Operaciones disponibles: listar, crear, editar y eliminar productos.</p>

                    <div class="mt-auto">
                        <a asp-controller="Products" asp-action="Index" class="btn btn-primary me-2">Listar Productos</a>
                        <a asp-controller="Products" asp-action="Create" class="btn btn-outline-primary me-2">Crear Producto</a>
                        <a asp-controller="Products" asp-action="Index" class="btn btn-secondary">Editar / Eliminar</a>
                        <small class="d-block text-muted mt-2">Para editar o eliminar seleccione un producto desde la vista de listado.</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

